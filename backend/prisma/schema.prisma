generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  role      String   
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  otp        String?
  otpExpires DateTime?
}